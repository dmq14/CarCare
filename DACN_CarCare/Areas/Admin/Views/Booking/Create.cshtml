@model DACN_CarCare.Models.Book

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/assets/css/tooplate-wave-cafe.css" rel="stylesheet" />
@Html.AntiForgeryToken()
@*Background video*@
<div class="tm-video-wrapper">
    <i id="tm-video-control-button" class="fas fa-pause"></i>
    <video style="opacity: 0.4" autoplay muted loop id="tm-video">
        <source src="~/Content/Frontend/video/backg1.mp4" type="video/mp4">
    </video>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h1 style="color: burlywood;margin-top:150px; text-align:center; font-size: 40px">Tạo lịch bảo dưỡng</h1>
    <div style="margin-top:70px" class="container form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div style="color: gold; font-family: Arial; font-size: 20px" class="form-group">
            @Html.LabelFor(model => model.maxe, "Loại xe", htmlAttributes: new { @class = "control-label col-md-2" })
            <div style="margin-top: 10px; margin-bottom: 10px" class="col-md-10">
                @Html.DropDownList("maxe", new SelectList(ViewBag.ListLoai, "maxe", "tenxe"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.maxe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div style="color: gold; font-family: Arial; font-size: 20px" class="form-group">
            @Html.LabelFor(model => model.tenKH, "Tên khách hàng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div style="margin-top: 10px; margin-bottom: 10px" class="col-md-10">
                @Html.EditorFor(model => model.tenKH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div style="color: gold; font-family: Arial; font-size: 20px" class="form-group">
            @Html.LabelFor(model => model.sdt, "Số điện thoại", htmlAttributes: new { @class = "control-label col-md-2" })
            <div style="margin-top: 10px; margin-bottom: 10px" class="col-md-10">
                @Html.EditorFor(model => model.sdt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sdt, "", new { @class = "text-danger" })
            </div>
        </div>


        <div style="color: gold; font-family: Arial; font-size: 20px" class="form-group">
            @Html.LabelFor(model => model.ghichu, "Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
            <div style="margin-top: 10px; margin-bottom: 10px" class="col-md-10">
                @Html.EditorFor(model => model.ghichu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ghichu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div style="color: gold; font-family: Arial; font-size: 20px" class="form-group">
            @Html.LabelFor(model => model.ngay, "Ngày đặt lịch", htmlAttributes: new { @class = "control-label col-md-2" })
            <div style="margin-top: 10px; margin-bottom: 10px" class="col-md-10">
                @Html.EditorFor(model => model.ngay, "{hh:mm:ss}", new { htmlAttributes = new { @type = "Date", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ngay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div style="margin-top: 10px; margin-bottom: 10px" class="col-md-offset-2 col-md-10">
                <input style="color: gold; font-family: Arial; font-size: 30px; border: solid" type="submit" value="Create" class="btn btn-default" />
            </div>
            <div style="margin-top: 10px">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}

