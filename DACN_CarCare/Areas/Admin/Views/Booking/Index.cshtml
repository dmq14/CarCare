@model IEnumerable<DACN_CarCare.Models.Book>

@{
    ViewBag.Title = "Danh sách lịch";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2 style=" margin-top: 150px;text-align:center">Danh sách các lịch đã đặt</h2>
<p style="text-align:center">
    @Html.ActionLink("Tạo lịch mới", "Create")
</p>

<div class=" flex-column justify-content-center w-100 h-100">

    <div class="d-flex flex-column justify-content-center align-items-center">
        <div class="container">
            <table style="font-size: 18px" class="table">
                <tr>
                    <th>
                        Loại xe
                    </th>
                    <th>
                        Tên Khách hàng
                    </th>
                    <th>
                        Số điện thoại
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Ghi chú
                    </th>
                    <th>
                        Ngày đặt
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Loai.tenxe)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tenKH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sdt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ghichu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ngay)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.id }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.id })
                        </td>
                    </tr>
                }

            </table>
        </div>

    </div>
</div>



